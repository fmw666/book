{
    "root": "./docs",
    "title": "您的第一本理财教程",
    "description": "14 Days of Investment",
    "author": "fmw666",
    "language": "zh-hans",
    "gitbook": ">=3.0.0",

    "structure": {
        "readme": "introduction.md"
    },

    "links" : {
        "sidebar" : {
            "Home" : ""
        },
        "sharing": {
            "twitter": null
        }
    },

    "plugins": [
        "github",
        "github-buttons",
        "theme-comscore",
        "splitter",
        "lightbox",
        "anchor-navigation-ex",
        "tbfed-pagefooter"
    ],

    "pluginsConfig": {
        "github": {
            "url": "https://github.com/fmw666"
        },
        "theme-default": {
            "showLevel": true
        },
        "anchor-navigation-ex": {
            "showLevel": false,
            "showGoTop": true
        },
        "tbfed-pagefooter": {
            "modify_label": "最后修改于",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        }
    },

    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "mobi": "styles/mobi.css"
    }
}